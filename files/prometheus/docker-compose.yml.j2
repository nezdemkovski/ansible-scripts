---
services:
  prometheus:
    image: docker.io/prom/prometheus:latest
    container_name: prometheus
    ports:
      - 9090:9090
    command: "--config.file=/etc/prometheus/prometheus.yaml"
    volumes:
      - {{ volume_base_path }}/prometheus/config/prometheus.yaml:/etc/prometheus/prometheus.yaml:ro
      - prometheus-data:/prometheus
    restart: unless-stopped
    networks:
      - traefik-proxy
      - prometheus-net
    labels:
      - traefik.enable=true
      - "traefik.http.routers.prometheus.rule=Host(`{{ prometheus_subdomain }}.{{ domain_name }}`){% if local_domain_name %} || Host(`{{ prometheus_subdomain }}.{{ local_domain_name }}`){% endif %}"
      - traefik.http.routers.prometheus.entrypoints=websecure
      - traefik.http.routers.prometheus.tls=true
      - traefik.http.routers.prometheus.tls.certresolver=cloudflare
      - traefik.http.services.prometheus.loadbalancer.server.port=9090

  cadvisor:
    image: gcr.io/cadvisor/cadvisor:latest
    container_name: cadvisor
    ports:
      - 9323:8080
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock:ro
      - /sys:/sys:ro
      - /:/rootfs:ro
    restart: unless-stopped
    networks:
      - prometheus-net
volumes:
  prometheus-data:
    driver: local
networks:
  prometheus-net:
    name: prometheus-net
    driver: bridge
  traefik-proxy:
    external: true
